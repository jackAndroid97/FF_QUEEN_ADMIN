<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#02023C"
    android:orientation="vertical"
    android:theme="@style/Theme.CustomTheme"
    tools:context="Fragments.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, "
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="!"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Your Games"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_games"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="2"
                             />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_koyel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="12dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/koyel_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="150dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/banner_3" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/koyel_image"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentBottom="true"
                                        android:background="@color/white"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Koyel"
                                        android:textColor="?android:textColorPrimary"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/fatafat_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="12dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/fatafat_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="150dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/banner_3" />

                                    <TextView
                                        android:id="@+id/fatafat_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/fatafat_image"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentBottom="true"
                                        android:background="@color/white"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Fatafat"
                                        android:textColor="?android:textColorPrimary"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/circle_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="12dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/circle_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="150dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/black_spin" />

                                    <TextView
                                        android:id="@+id/circle_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/circle_image"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentBottom="true"
                                        android:background="@color/white"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Circle"
                                        android:textColor="?android:textColorPrimary"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/spin_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="12dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/spin_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="150dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/lucky_wheel" />

                                    <TextView
                                        android:id="@+id/spin_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/spin_image"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentBottom="true"
                                        android:background="@color/white"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Spin"
                                        android:textColor="?android:textColorPrimary"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/thunder_bolt_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="12dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/thunder_bolt_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="150dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/pool_ball" />

                                    <TextView
                                        android:id="@+id/thunder_bolt_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/thunder_bolt_image"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentBottom="true"
                                        android:background="@color/white"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Thunderbolt"
                                        android:textColor="?android:textColorPrimary"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/lucky_7_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="12dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/lucky_7_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="150dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/dice_roll" />

                                    <TextView
                                        android:id="@+id/lucky_7_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/lucky_7_image"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentBottom="true"
                                        android:background="@color/white"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Lucky Seven"
                                        android:textColor="?android:textColorPrimary"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/marquee_btn"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:id="@+id/customer_details_btm"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#d3ffd8"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_marquee"
                                    app:tint="@android:color/holo_green_light" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentBottom="true"
                                    android:padding="10dp"
                                    android:text="Marquee"
                                    android:textColor="@android:color/holo_green_light"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/banner_btn"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:id="@+id/customer_orders_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#daedf4"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_banner"
                                    app:tint="@android:color/holo_blue_light" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentBottom="true"
                                    android:padding="10dp"
                                    android:text="Banners"
                                    android:textColor="@android:color/holo_blue_light"
                                    android:textSize="15sp" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/commission_btn"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            android:visibility="gone"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#E0F7FA"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:padding="10dp"
                                    android:src="@drawable/money"
                                    app:tint="#037381" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentBottom="true"
                                    android:padding="10dp"
                                    android:text="Commission"
                                    android:textColor="#037381"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/money_request_btn"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F0F4C3"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:padding="10dp"
                                    android:src="@drawable/money_transfer"
                                    app:tint="#747E05" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentBottom="true"
                                    android:padding="10dp"
                                    android:text="View Money Request"
                                    android:textColor="#808A0A"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/add_super_dis_btn"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            android:visibility="gone"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#A9F8F1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_user"
                                    app:tint="#029184" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentBottom="true"
                                    android:padding="10dp"
                                    android:text="Add User"
                                    android:textColor="#04776C"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/user_btn"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:visibility="visible"
                            app:cardCornerRadius="12dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:id="@+id/blog_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#ffd0d0"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_user"
                                    app:tint="@android:color/holo_red_dark" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentBottom="true"
                                    android:padding="10dp"
                                    android:text="Users"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/withdraw_btn"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FBE9E7"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:padding="10dp"
                                    android:src="@drawable/money"
                                    app:tint="#F17062" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentBottom="true"
                                    android:padding="10dp"
                                    android:text="Withdrawal"
                                    android:textColor="#F17062"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:id="@+id/contact_us_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#CBC3E3"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_phone"
                                    app:tint="@android:color/holo_purple" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentBottom="true"
                                    android:padding="10dp"
                                    android:text="Contact Us"
                                    android:textColor="@android:color/holo_purple"
                                    android:textSize="15sp" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/add_game"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            android:visibility="visible"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F4B5CA"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:padding="10dp"
                                    android:src="@drawable/console"
                                    app:tint="#E3024D" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentBottom="true"
                                    android:padding="10dp"
                                    android:text="Add Game"
                                    android:textColor="#E3024D"
                                    android:textSize="15sp" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/Game_time"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            android:visibility="visible"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F4B5CA"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:padding="10dp"
                                    android:src="@drawable/clock"
                                    app:tint="#E3024D" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentBottom="true"
                                    android:padding="10dp"
                                    android:text="Add Game Time"
                                    android:textColor="#E3024D"
                                    android:textSize="15sp" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/game_off_btn"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            android:visibility="gone"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#CBC3E3"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
