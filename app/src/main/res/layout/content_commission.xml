<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_8sdp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/txt_super_distributor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Super Distributor"
            android:fontFamily="@font/fonts_medium"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="normal"/>


        <TextView
            android:id="@+id/txt_s_distributor_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs 0/-"
            android:fontFamily="@font/fonts_medium"
            android:textSize="15sp"
            android:textColor="#000"
            android:textStyle="bold"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/btn_edit_s_dis"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/white"/>

    </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/txt_distributor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distributor"
                android:fontFamily="@font/fonts_medium"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/txt_distributor_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs 0/-"
                android:fontFamily="@font/fonts_medium"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/btn_edit_dis"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/txt_retailer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Retailer"
                android:fontFamily="@font/fonts_medium"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="normal"/>


            <TextView
                android:id="@+id/txt_retailer_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs 0/-"
                android:fontFamily="@font/fonts_medium"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/btn_edit_retailer"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>