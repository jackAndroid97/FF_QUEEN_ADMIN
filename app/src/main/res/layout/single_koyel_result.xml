<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="DATE"
            android:background="@drawable/table_header_cell_bg"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/fonts_regular"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/txt_morning"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="MOR"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/fonts_regular"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/table_content_cell_bg"
            />

        <TextView
            android:id="@+id/txt_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="DAY"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/fonts_regular"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/table_content_cell_bg"
            />

        <TextView
            android:id="@+id/txt_evening"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="EVN"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/fonts_regular"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/table_content_cell_bg"
            />
        <TextView
            android:id="@+id/txt_night"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="NIG"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/fonts_regular"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/table_content_cell_bg"
            />

    </LinearLayout>


</LinearLayout>